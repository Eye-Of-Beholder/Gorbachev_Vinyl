                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Image Source="/Images2/Beatles.jpg" Margin="5,5,5,0"/>
                    <TextBlock Text="THE BEATLES - 1" Grid.Row="0"

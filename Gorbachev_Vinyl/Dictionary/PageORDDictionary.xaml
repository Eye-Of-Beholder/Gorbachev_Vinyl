<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="{x:Type DataGrid}" x:Key="DataGridStyle">
        <Setter Property="Background" Value="#272537"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="RowBackground" Value="#313140"/>
        <Setter Property="AlternatingRowBackground" Value="#272537"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
    </Style>

    <!-- Стиль для TextBlock -->
    <Style TargetType="{x:Type TextBlock}" x:Key="TextBlockStyle">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="0,0,10,10"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="YourFontFamily"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <!-- Пример использования стиля для RadioButton -->
    <Style BasedOn="{StaticResource MenuButton}" TargetType="{x:Type RadioButton}" x:Key="RadioButtonStyle">
        <Setter Property="Foreground" Value="White"/>
    </Style>
</ResourceDictionary>